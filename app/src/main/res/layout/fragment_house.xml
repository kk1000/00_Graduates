                        android:text="@string/house_0"
                        android:textColor="@color/base_color_text_black"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_house_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
