<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#88000000"
    android:gravity="center">

    <ImageView
        android:id="@+id/kt_imageview_thumbnail"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:scaleType="centerCrop" />

    <!-- 选择框 -->

    <ImageView
        android:id="@+id/kt_video_check"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:enabled="true"
        android:minHeight="45dp"
        android:minWidth="45dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/kryptanium_checkbox_album" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/kryptanium_video_play_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <TextView
            android:id="@+id/kt_vodie_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kt_vodie_info_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/kt_imageview_thumbnail_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDFFFFFF" />

</RelativeLayout>
