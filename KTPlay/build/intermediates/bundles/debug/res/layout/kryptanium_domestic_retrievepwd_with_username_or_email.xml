<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- 内容区 -->

    <LinearLayout
        android:layout_width="@dimen/kryptanium_login_content_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/kryptanium_retrievepwd_icon" />

        <TextView
            style="@style/kryptanium_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="@string/kt_reset_enterusername" />
        <!-- 用户名/邮箱 -->

        <com.ktplay.widget.KTClearableEditText
            android:id="@+id/kryptanium_register_by_username_or_email"
            style="@style/kryptanium_edittext"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:cursorVisible="true"
            android:hint="@string/kt_reset_enter_username_with_email" />
        <!-- 登录按钮 -->

        <TextView
            android:id="@+id/kryptanium_domestic_register_button"
            style="@style/kryptanium_button_style_main"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:text="@string/kt_confirm" />
    </LinearLayout>

</FrameLayout>
