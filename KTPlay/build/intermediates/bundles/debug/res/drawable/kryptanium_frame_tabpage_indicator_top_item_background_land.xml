            <solid android:color="@color/kt_theme_navigationitem_selected" />
            <!-- <solid android:color="@color/kryptanium_head_tab_bg"/>-->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/kt_round_corner_border_size" android:topRightRadius="0dp" />
        </shape>

    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
