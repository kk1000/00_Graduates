<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:background="@color/kt_theme_headsection_background"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="@dimen/kt_card_hpadding"
    android:paddingRight="@dimen/kt_card_hpadding"
    android:paddingTop="12dp">

    <!-- 标题 -->

    <TextView
        android:id="@id/kt_item_title"
        style="@style/kryptanium_large_text_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:maxLines="1"
        android:text="@string/kt_campaign_share_topic" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="32dp">

        <!-- 图标 -->

        <ImageView
            android:id="@id/kt_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="56dp"
            android:paddingRight="70dp"
            android:visibility="visible">

            <!-- 奖励内容 -->

            <com.ktplay.widget.KTCompoundText
                android:id="@id/kt_content"
                style="@style/kryptanium_primary_text_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

            <!-- 剩余时间 -->

            <TextView
                android:id="@id/kt_item_time"
                style="@style/kryptanium_primary_text_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right">

            <TextView
                android:id="@+id/kt_item_sharecampaign_button"
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:background="@drawable/kryptanium_button_bg"
                android:gravity="center" />

            <TextView
                android:id="@+id/kt_item_sharecampaign_button_text"
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="@string/kt_share_to_sns"
                android:textColor="@color/kryptanium_text_white"
                android:textSize="@dimen/kryptanium_text_size_standard" />
        </FrameLayout>

    </FrameLayout>

</LinearLayout>
