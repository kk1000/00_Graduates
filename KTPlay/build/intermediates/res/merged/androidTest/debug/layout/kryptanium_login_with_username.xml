<?xml version="1.0" encoding="utf-8"?>

<!-- 手机号登录界面 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- 内容区 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/kryptanium_login_content_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/kryptanium_icon_ktplay" />
            <!-- 用户名/邮箱 -->

            <com.ktplay.widget.KTClearableEditText
                android:id="@+id/kryptanium_usernamelogin_username"
                style="@style/kryptanium_edittext"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:cursorVisible="true"
                android:hint="@string/kt_email_or_username" />

            <!-- 密码 -->

            <com.ktplay.widget.KTClearableEditText
                android:id="@+id/kryptanium_usernamelogin_password"
                style="@style/kryptanium_edittext"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:hint="@string/kt_password_placeholder"
                android:inputType="textPassword" />

            <!-- 登录按钮 -->

            <TextView
                android:id="@+id/kryptanium_usernamelogin_login"
                style="@style/kryptanium_button_style_main"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:text="@string/kt_login" />

            <!-- 忘记密码链接 -->

            <TextView
                android:id="@+id/kryptanium_usernamelogin_forgetpassword"
                style="@style/kryptanium_link_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="@string/kt_forget_password" />

            <!-- 手机号登录链接 -->

            <TextView
                android:id="@+id/kryptanium_usernamelogin_to_phonelogin"
                style="@style/kryptanium_link_text"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="40dp"
                android:text="@string/kt_link_login_with_phonenumber" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
