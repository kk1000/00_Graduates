<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.ktplay.widget.KTIndeterminatedProgress
        android:id="@id/kt_progress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="@drawable/kryptanium_circle_bg"
        android:visibility="gone" />

    <com.ktplay.support.v4.view.ViewPager
        android:id="@+id/kryptanium_more_imagepreview_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp" />

    <FrameLayout
        android:id="@+id/kryptanium_more_imagepreview_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="#000000">

        <ImageView
            android:id="@+id/kryptanium_more_imagepreview_title_left_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:src="@drawable/kryptanium_titlebar_button_back_icon_white" />

        <TextView
            android:id="@+id/kryptanium_more_imagepreview_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/kryptanium_base_color_white"
            android:textSize="@dimen/kryptanium_text_size_big" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kryptanium_more_imagepreview_title_right_textview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:background="@drawable/kryptanium_title_blue_cirle"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:text="0"
                android:textColor="@color/kryptanium_base_color_white"
                android:textSize="@dimen/kryptanium_text_size_standard" />

            <ImageView
                android:id="@+id/kryptanium_more_imagepreview_title_right_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:src="@drawable/kryptanium_titlebar_button_icon_blue" />

            <ImageView
                android:id="@+id/kryptanium_more_imagepreview_title_right_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:src="@drawable/kryptanium_icon_download"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/kryptanium_more_imagepreview_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="#b2000000">

        <ImageView
            android:id="@+id/kryptanium_more_imagepreview_bottom_right_checkbox"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:enabled="true"
            android:paddingBottom="5dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:src="@drawable/kryptanium_checkbox_album" />
    </FrameLayout>

</FrameLayout>
