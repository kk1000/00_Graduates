<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/kryptanium_user_set_info_layout_width"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingTop="@dimen/kryptanium_user_set_info_layout_paddingTop">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/kt_icon_email_sent" />

        <TextView
            android:id="@+id/kryptanium_title_describe"
            style="@style/kryptanium_secondary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kryptanium_user_set_info_title_describe_marginBottom"
            android:gravity="center_horizontal"
            android:textColor="@color/kt_imagepreview_blue" />

        <TextView
            style="@style/kryptanium_secondary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kryptanium_user_set_info_title_describe_marginBottom"
            android:gravity="center_horizontal"
            android:text="@string/kt_verification_email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kryptanium_confrim"
                style="@style/kryptanium_button_style_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kryptanium_user_set_info_edittext_height"
                android:layout_marginTop="@dimen/kryptanium_user_set_info_textview_marginTop"
                android:gravity="center"
                android:text="@string/kt_confirm" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
