<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 更多游戏 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/kryptanium_more_game_layout_item_margin_Top_Bottom"
        android:layout_marginTop="@dimen/kryptanium_more_game_layout_item_margin_Top_Bottom"
        android:paddingLeft="@dimen/kryptanium_layout_marginLeft">

        <!-- android:minHeight="@dimen/kryptanium_hot_game_frame_th" -->
        <!--
     <ImageView
	    android:id="@+id/kryptanium_hot_item_player_iv"
	    android:layout_width="@dimen/kryptanium_head_wh_small"
	    android:layout_height="@dimen/kryptanium_head_wh_small"
	    android:scaleType="fitXY"/>
        -->
        <!-- android:background="@drawable/kryptanium_corner_bg_white" -->
        <!-- 下载按钮 -->

        <ImageView
            android:id="@+id/kryptanium_hot_game_donwload"
            style="@style/kryptanium_buttom_style_download"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/kryptanium_layout_marginRight" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/kryptanium_hot_game_donwload">

            <ImageView
                android:id="@+id/kryptanium_hot_game_portrait"
                android:layout_width="@dimen/kryptanium_more_game_layout_item_image_icon_width_height"
                android:layout_height="@dimen/kryptanium_more_game_layout_item_image_icon_width_height"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/kryptanium_hot_game_name"
                style="@style/kryptanium_primary_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/kryptanium_more_game_textview_marginLeft"
                android:layout_toRightOf="@+id/kryptanium_hot_game_portrait"
                android:maxLines="1" />

            <TextView
                android:id="@+id/kryptanium_hot_game_desc"
                style="@style/kryptanium_secondary_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kryptanium_hot_game_name"
                android:layout_marginLeft="@dimen/kryptanium_more_game_textview_marginLeft"
                android:layout_marginTop="@dimen/kryptanium_more_game_textview_marginTop"
                android:layout_toRightOf="@+id/kryptanium_hot_game_portrait" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
