<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.ktplay.widget.YoMoveImage xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/kryptanium_fullscreen_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@null" />

    <com.ktplay.widget.KTIndeterminatedProgress
        android:id="@id/kt_progress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="@drawable/kryptanium_circle_bg"
        android:visibility="gone" />

</FrameLayout>
